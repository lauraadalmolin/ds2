<div class='row'>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading center">
				Lista de Comunicadores
			</div>
			<div class="panel-body center">
				Você está ouvindo: Shape of You - Ed Sheeran<br><br>
				<input class='form-control' placeholder='Buscar comunicador' type="text" id="campoBuscar">
				<br>
				<button onclick="buscar()" id='btn' class='btn btn-default'>Buscar</button>
				<br><br>
				<div class="alert alert-info" role="alert" id="msg1" style='display:none;'></div>
				<table class='table'>
					<tr>
						<td></td>
						<td></td>
						<td>Imagem</td>
						<td>Nome</td>
						<td>ID</td>
					</tr>
					<% @vetcomunicador.each do |comunicador| %>
					<tr> 
						<td> <a href='/admin/exclui_comunicador/<%= comunicador.id_c%>'><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
						<td> <a href='/admin/tela_altera_comunicador/<%= comunicador.id_c%>'><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
						<td><img src=imagens/comunicador/<%= comunicador.imagem %> width='200px'></td>
						<td><%= comunicador.nome %></td>
						<td><%= comunicador.id_c %></td>
						
					</tr>
					<% end %>
				</table>
			</div>
		</div>				
	</div>
</div>
<script>
	var audio = new Audio('./../../shapeofyou.mp3');
	audio.play();
</script>
<script src="./../../jquery-3.2.1.min.js"></script>


<script>
	function buscar() {
		var nome = document.getElementById("campoBuscar").value;
		//alert(nome);			

		$.get("/admin/buscar_comunicador/" + nome, function(data) {
			//alert(JSON.parse(data));
			document.getElementById('msg1').style.display = "block";
			if(JSON.parse(data) == true) {
				//alert("oi");
	            document.getElementById('msg1').innerHTML = "Há um comunicador com esse nome";
			} else {
				document.getElementById('msg1').innerHTML = "Não há um comunicador com esse nome";
			}
		});
	      
	}
		
</script>
