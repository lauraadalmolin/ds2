<div class='row'>
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading center">
				Alterar Nome do Comunicador
			</div>
			<div class="panel-body center">
				
				<form action='/admin/altera_comunicador' method='post'  enctype='multipart/form-data'>
					<div class="input-group col-lg-12">
					  <input type="text" class="form-control" placeholder="Nome" name='nome' value="<%= @comunicador.nome %>" aria-describedby="basic-addon3">
					  <br>
					  <input type='hidden' name='id_c' value="<%= @comunicador.id_c %>">
					</div>
					<br>
				<input type='submit' class="btn btn-info">
				</form>
			</div>
		</div>
	</div>
</div>